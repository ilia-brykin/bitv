div
  h2.cursor_pointer.a_d_flex.a_align_items_center(
    :ariaExpanded="isRubricOpenLocal"
    tabindex="0"
    @click="toggleRubric"
  )
    a-element.a_mr_2(
      type="text"
      :icon-left="iconToggleRubric"
      icon-class="a_width_5 a_height_auto"
      tag="span"
    )
    a-translation(
      tag="span"
      :text="headerKey"
    )

  .a_ml_5(
    v-show="isRubricOpenLocal"
  )
    template(
      v-if="elementsTranslatedAndHighlighted.length"
    )
      a-translation(
        v-for="element in elementsTranslatedAndHighlighted"
        :key="element.key"
        tag="div"
        :safe-html="element.htmlTranslation"
      )

    slot(
      name="default"
    )
